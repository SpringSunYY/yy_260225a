<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lz.manage.mapper.StatisticsMapper">
    <select id="appointmentStatistics" resultType="com.lz.manage.model.statistics.po.StatisticsPo">
        select count(*) as value,DATE(create_time) as name
        from tb_appointment_info
        <where>
        <if test="startTime != null">
            and create_time >= #{startTime}
        </if>
        <if test="endTime != null">
            and create_time &lt; #{endTime}
        </if>
        </where>
        group by create_time
        order by create_time
    </select>
</mapper>
