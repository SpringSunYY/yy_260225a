<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lz.manage.mapper.SeatInfoMapper">
    
    <resultMap type="SeatInfo" id="SeatInfoResult">
        <result property="id"    column="id"    />
        <result property="libraryId"    column="library_id"    />
        <result property="name"    column="name"    />
        <result property="status"    column="status"    />
        <result property="image"    column="image"    />
        <result property="description"    column="description"    />
        <result property="remark"    column="remark"    />
        <result property="userId"    column="user_id"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectSeatInfoVo">
        select id, library_id, name, status, image, description, remark, user_id, create_time, update_by, update_time from tb_seat_info
    </sql>

    <select id="selectSeatInfoList" parameterType="SeatInfo" resultMap="SeatInfoResult">
        <include refid="selectSeatInfoVo"/>
        <where>  
            <if test="id != null "> and id = #{id}</if>
            <if test="libraryId != null "> and library_id = #{libraryId}</if>
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
            <if test="params.beginCreateTime != null and params.beginCreateTime != '' and params.endCreateTime != null and params.endCreateTime != ''"> and DATE_FORMAT(create_time, '%Y-%m-%d') between #{params.beginCreateTime} and #{params.endCreateTime}</if>
        </where>
    </select>
    
    <select id="selectSeatInfoById" parameterType="Long" resultMap="SeatInfoResult">
        <include refid="selectSeatInfoVo"/>
        where id = #{id}
    </select>

    <insert id="insertSeatInfo" parameterType="SeatInfo" useGeneratedKeys="true" keyProperty="id">
        insert into tb_seat_info
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="libraryId != null">library_id,</if>
            <if test="name != null and name != ''">name,</if>
            <if test="status != null and status != ''">status,</if>
            <if test="image != null">image,</if>
            <if test="description != null">description,</if>
            <if test="remark != null">remark,</if>
            <if test="userId != null">user_id,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="libraryId != null">#{libraryId},</if>
            <if test="name != null and name != ''">#{name},</if>
            <if test="status != null and status != ''">#{status},</if>
            <if test="image != null">#{image},</if>
            <if test="description != null">#{description},</if>
            <if test="remark != null">#{remark},</if>
            <if test="userId != null">#{userId},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateSeatInfo" parameterType="SeatInfo">
        update tb_seat_info
        <trim prefix="SET" suffixOverrides=",">
            <if test="libraryId != null">library_id = #{libraryId},</if>
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="image != null">image = #{image},</if>
            <if test="description != null">description = #{description},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteSeatInfoById" parameterType="Long">
        delete from tb_seat_info where id = #{id}
    </delete>

    <delete id="deleteSeatInfoByIds" parameterType="String">
        delete from tb_seat_info where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>